hermes:
  web:
    ip: 0.0.0.0
    port: 39100
    cors:
      fallback_origin: https://hermes.yourcompany.com
      allowed_origins:
        - https://hermes.yourcompany.com
    session:
      secret: FnOqaJaRsV9xKyoAACwGFnOqaJaRsV9xKyoAACwGFnOqaJaRsV9xKyoAACwGFnOqaJaRsV9xKyoAACwG
      encryption_salt: "TODO: cookie store encryption salt"
      signing_salt: "TODO: cookie store signing salt"
    api_keys:
      - CHANGE_ME
  db:
    url: postgres://postgres:postgres@hermes-db-prod:5432/hermes
  ldap:
    server: ldap.yourcompany.com
    user_dn: CN=binduser,CN=Users,DC=yourcompany,DC=com
    password: binduserpwd
    base: CN=Users,DC=yourcompany,DC=com
    attr:
      #class: objectClass
      #class_value_user: person
      #class_value_group: group
      user_id: sAMAccountName
      #user_name: cn
      #user_email: mail
      #user_office: o
      #group_name: cn
      #group_members: member
  access:
    auth_realm: yourcompany
    admin_group: hermes-admins
    local_admin: false
  bamboo:
    main:
      base_url: https://api.bamboohr.com/api/gateway.php
      company_domain: yourcompany
      api_key: CHANGE_ME
      timeoffs:
        "83": paid_vacation
        "85": time_off
        "87": sick
        "90": parental_leave
        "91": vab
        "93": holiday
  hrvey:
    url: https://www.hrvey.com
    email: apiuser@yourcompany.com
    password: CHANGE_ME
    timeoffs:
      "Vacation": paid_vacation
      "Sick leave": sick
      "Paid leave": paid_vacation
      "Unpaid leave": unpaid_vacation
      "Maternity leave": maternity_leave
      "Paternity leave": parental_leave
  junipeer:
    url: https://api.junipeer.io/yourcompany
    username: CHANGE_ME
    password: CHANGE_ME
  visma:
    offices:
      Main:
        api_key: CHANGE_ME
